# Environment Configuration Example
# Copy this file to .env and update with your values

# Data Paths
DATA_RAW_PATH=data/raw
DATA_TAPES_PATH=data/tapes
OUTPUT_PATH=outputs

# Monte Carlo Configuration
DEFAULT_N_PATHS=1000
DEFAULT_SEED=42
DEFAULT_HORIZON_MONTHS=360

# Model Configuration
CPR_MODEL_PATH=models/saved_models/cpr_model.pkl
CDR_MODEL_PATH=models/saved_models/cdr_model.pkl
SEVERITY_MODEL_PATH=models/saved_models/severity_model.pkl

# Database (if needed for future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=intain_quant
# DB_USER=postgres
# DB_PASSWORD=

# API Keys (if needed for external data)
# BLOOMBERG_API_KEY=
# FRED_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FILE=intain_quant.log

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Performance
MAX_WORKERS=4
CHUNK_SIZE=10000

# Feature Flags
ENABLE_ML_MODELS=false
ENABLE_STATISTICAL_MODELS=true
ENABLE_CORRELATION_SAMPLING=true
